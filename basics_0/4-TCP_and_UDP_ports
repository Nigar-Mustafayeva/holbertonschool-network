#!/usr/bin/env bash
# 4-TCP_and_UDP_ports
# Displays listening TCP/UDP and UNIX domain sockets with PID/program

echo "Active Internet connections (only servers)"
# -l: listening, -p: show PID/program, -t: TCP, -u: UDP, -n: numeric
netstat -tulnp

echo "Active UNIX domain sockets (only servers)"
# -l: listening, -p: show PID/program, -x: UNIX domain sockets
netstat -lxnp
